.row-fluid
  .col-12
    .table_caption Lncrna info
    %table.key_value_info
      %tbody
        = table_info_row(@lncrna, :hgnc_symbol){|l| hgnc_id_link(l.hgnc_id, name: l.hgnc_symbol) }
        = table_info_row(@lncrna, :hgnc_id){|l| hgnc_id_link(l.hgnc_id) }
        = table_info_row(@lncrna, :alternative_names)
        = table_info_row(@lncrna, :hgnc_name)
        = table_info_row(@lncrna, :gene_id){|l| gene_id_link(l.gene_id) }
        = table_info_row @lncrna, :gene_tag
        = table_info_row @lncrna, :gene_desc
        = table_info_row @lncrna, :function
        = table_info_row(@lncrna, :pmid_function){|l| pmid_links(l.pmid_function) }
        = table_info_row @lncrna, :target
        = table_info_row @lncrna, :specific_target
        = table_info_row(@lncrna, :uniprot_id_target){|l| uniprot_id_or_ac_links(l.uniprot_id_target) }
        = table_info_row(@lncrna, :pmid_target){|l| pmid_links(l.pmid_target) }
        = table_info_row @lncrna, :comment
        = table_info_row @lncrna, :status

.row-fluid
  .col-12
    %hr
    .table_caption Expression statistics
    = render partial: 'shared/statistics', locals: {statistics: @expression_statistics}
.row-fluid
  .col-12
    = render partial: 'shared/expressions_by_samples', locals: {statistics: @expression_statistics, expressions_with_quantiles: @expressions_with_quantiles}

- content_for(:meta_description) do
  = "Lncrna info for human #{@lncrna.hgnc_symbol} (#{@lncrna.uniprot_id_target} in UniProt)"
